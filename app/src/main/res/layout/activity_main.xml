<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.digitalmirko.medallibraryanimationdemo.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="125dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:padding="15dp"
            app:srcCompat="@drawable/goldmedal" />

        <com.skydoves.medal.MedalLayout
            android:layout_width="125dp"
            android:layout_height="150dp"
            app:direction="right"
            app:turn="2"
            app:speed="2500">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="260dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:padding="15dp"
            app:srcCompat="@drawable/firstplace" />

        </com.skydoves.medal.MedalLayout>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="125dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:padding="15dp"
            app:srcCompat="@drawable/goldmedal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <com.skydoves.medal.MedalLayout
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            app:direction="right"
            app:turn="3"
            app:speed="2000">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:padding="15dp"
            app:srcCompat="@drawable/secondplace" />

        </com.skydoves.medal.MedalLayout>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:padding="15dp"
            app:srcCompat="@drawable/lockheart" />

        <com.skydoves.medal.MedalLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:direction="right"
            app:turn="4"
            app:speed="3000">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:padding="15dp"
            app:srcCompat="@drawable/thirdplace" />

        </com.skydoves.medal.MedalLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:padding="15dp"
            app:srcCompat="@drawable/blackblue" />

        <com.skydoves.medal.MedalLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:direction="left"
            app:turn="5"
            app:speed="1500">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/croixdeguerreb" />

        </com.skydoves.medal.MedalLayout>

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:padding="15dp"
            app:srcCompat="@drawable/blackblue" />

    </LinearLayout>

</LinearLayout>
